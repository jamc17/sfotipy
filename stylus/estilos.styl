@import "nib"
@import "normalize.styl"
@import "icomoon.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #CC2F6F
azul = #00F
azulFb = #3D5A98
azulTw = #5FA9DD
gris_mas_claro =#F0F0F0

// animacion(parametro)
// 	-webkit-animation parametro
// 	-moz-animation parametro
// 	-o-animation parametro
// 	-ms-animation parametro
// 	-webkit-animation parametro

a
	text-decoration none

body
	font-family: 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0

ul
	margin 0
	padding 0

.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0

	&.gray
		color gris_claro

.actions-login
	height 2em
	padding 1em 0
	overflow hidden
	.action-login
		float left
		width 50%
		padding .7em 0
		&:last-child
			width 49%
			border-left 1px solid gris_claro
	a
		color gris_claro
		text-decoration underline


	

.right-text
	text-align right

.actions
	background rgba(black,.3)
	bottom 0
	left 0
	position absolute
	right 0



.padding
	padding 1em

.padding-t-b
	padding 1em 0

.progress
	margin-top 1.5em
	position relative

	.min
	.max
		font-size .8em
		position absolute
		top -.5em

	.min
		left 0

	.max
		right 0

	.state
		animation 190s state linear
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%

		.circle
			animation 1s circle infinite
			background gris_oscuro
			border-radius 50%
			height 10px
			position absolute
			right 0
			top -2px
			width 10px

	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 70%

@keyframes state
	0%
		width 0
	100%
		width 100%

@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(1.5)
		opacity 0


.author
	color gris_claro

.borde-inferior
	border-bottom 1px solid gris_claro


.btnFbLogin
.btnTwLogin
	width 13.6em
	height 1.81em
	background azulFb
	border-radius 3px
	margin 0 auto
	margin-bottom .5em
	display block
	color white
	padding .5em
	.icon
		font-size 1.2em
		display block
		float left
		padding .2em .5em .2em .2em
		
	.text
		height 22px
		border-left 1px solid gris_claro
		font-size .7em
		display block
		float left
		padding .5rem 0 0 1rem
		

.btnTwLogin
	background azulTw

.button-menu
	color gris_oscuro
	font-size 1.4em
	left .5em
	margin-top -.5em
	position absolute
	top 50%

.center-block
	margin 0 auto

.center-text
	text-align center

.close-icon
	color gris_claro
	position absolute
	top .5em
	right .5em
	font-size 1.2em

.container
	font-size 0
	padding 1.4rem
	text-align center

header
	border-bottom 1px solid gris_claro

	.title
		font-size 1.1em
		line-height 3.5em
		text-align center
img
	vertical-align top

input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em


.features
	margin-top 1em
	.description
		width 70%
		text-align center
		color gris_claro
		h3
			color gris_oscuro

	

.imageHome
	width 0 auto
	height 25em
	background url("../img/home.jpg") no-repeat right bottom
	background-size 100% 100%
	padding 0 2.4em
	overflow hidden

.imageLogin
	width auto

	img
		width 100%

.left 
	float left

.logoLogin
	margin-top 5.2em

.right
	float right


.menu
	display none

.mensaje
	margin 1em auto
	padding 1em 0
	font-size 1.3em
	color gris_claro
	width 85%
	border-top 1px solid gris_claro

.name
	color gris_oscuro


.piePagina
	background black
	padding 1em 2em
	overflow hidden
	.logo
		margin 0
		padding 0
		background none
		display block

	.links
		float right
		a
			font-size .8em
			color white
			text-decoration underline

.playing
	&.small
		width 20em

.playlist
	display none
	width 24em
	padding 0 2em
	border-left 1px solid gris_claro
	
	.autor
		color gris_claro

	.name
		font-size 1.2em

	.list
		list-style none

	.item
		padding 1em 0
		.action
			font-size .9em


.logo
	display none
	padding 1.3em 0;
	overflow hidden
	background white
	.image
		img
			width 127px
	
.avatar
	width 38px
	height 38px

.menu
	border-top 1px solid gris_claro
	background gris_mas_claro
	overflow hidden
	.item
		float left
		list-style none
		a
			padding 1em
			color gris_oscuro
			text-transform uppercase
			cursor pointer
			display block
			border-top 5px solid transparent
			// transition .2s border-to
			&:hover
				border-top 5px solid gris_claro


.username
	color gris_claro
	margin-left .5em
	margin-top 9px

	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em


.relative
	position relative

.round
	border-radius 50%
	overflow hidden


.search-icon
	color gris_claro
	left .5em
	position absolute
	top .8em

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 7.75rem

	&:nth-child(even)
		margin-right 0

	p
		margin .5em 0

.wrap
	width 1024px

.welcomeText
	color white
	font-size 1.3em

@media screen and (min-width: 480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto

	.playing
		&.medium
			width auto
	.piePagina
		.links
			margin-left 2em
			float left


@media screen and (min-width: 1024px)
	body
		background gris_mas_claro

	header
		border-bottom none
		.button-menu
		.title
			display none
	
	.logo
	.playlist
	.menu
		display block

	.music
		float left
		width 32.5em

		.description
			display none


	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			overflow hidden
			width 1024px


	


		


